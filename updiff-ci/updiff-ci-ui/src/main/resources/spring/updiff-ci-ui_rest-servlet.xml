<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mvc="http://www.springframework.org/schema/mvc"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
		http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">


    <!-- 激活@Controller模式 -->
    <mvc:annotation-driven />

    <!-- 扫描所有的controller 但是不扫描service-->
    <context:component-scan base-package="com.sand.sdrift.server.ui.controller"/>

    <bean id="viewResolver" class="org.springframework.web.servlet.view.InternalResourceViewResolver">
        <property name="prefix">
            <value>/WEB-INF/</value>
        </property>
        <property name="suffix">
            <value>.jsp</value>
        </property>
    </bean>

    <!--静态资源-->
    <mvc:resources mapping="/bootstrap/**" location="/bootstrap/"/>
    <!--<mvc:resources mapping="/css/**" location="/css/"/>-->
    <mvc:resources mapping="/dist/**" location="/dist/"/>
    <mvc:resources mapping="/font-awesome/**" location="/font-awesome/"/>
    <mvc:resources mapping="/image/**" location="/image/"/>
    <mvc:resources mapping="/ionicons/**" location="/ionicons/"/>
    <mvc:resources mapping="/js/**" location="/js/"/>
    <mvc:resources mapping="/plugins/**" location="/plugins/"/>
    <mvc:resources mapping="/jsonformater/**" location="/jsonformater/"/>

</beans>

<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context-3.2.xsd">
	

	<context:property-placeholder location="classpath*:config/http-invoker.properties" ignore-unresolvable="true"/>
	
	<!-- 获取 http invoker 服务 -->
	<bean id="usersService" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
		<property name="serviceUrl" value="http://${sdrift.server.service.host}:${sdrift.server.service.port}/usersService" />
		<property name="serviceInterface" value="com.sand.sdrift.server.common.service.UsersService" />
	</bean>
    <bean id="clientService" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="http://${sdrift.server.service.host}:${sdrift.server.service.port}/clientService" />
        <property name="serviceInterface" value="com.sand.sdrift.server.common.service.ClientService" />
    </bean>
    <bean id="noticeService" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="http://${sdrift.server.service.host}:${sdrift.server.service.port}/noticeService" />
        <property name="serviceInterface" value="com.sand.sdrift.server.common.service.NoticeService" />
    </bean>
    <bean id="ioService" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="http://${sdrift.server.service.host}:${sdrift.server.service.port}/ioService" />
        <property name="serviceInterface" value="com.sand.sdrift.server.common.service.IoService" />
    </bean>
    <bean id="clientTopicService" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="http://${sdrift.server.service.host}:${sdrift.server.service.port}/clientTopicService" />
        <property name="serviceInterface" value="com.sand.sdrift.server.common.service.ClientTopicService" />
    </bean>
    <bean id="noticeLogService" class="org.springframework.remoting.httpinvoker.HttpInvokerProxyFactoryBean">
        <property name="serviceUrl" value="http://${sdrift.server.service.host}:${sdrift.server.service.port}/noticeLogService" />
        <property name="serviceInterface" value="com.sand.sdrift.server.common.service.NoticeLogService" />
    </bean>


</beans>
